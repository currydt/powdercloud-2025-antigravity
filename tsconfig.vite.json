{
    "compilerOptions": {
        "target": "ESNext",
        "useDefineForClassFields": true,
        "module": "ESNext",
        "lib": [
            "ESNext",
            "DOM",
            "DOM.Iterable"
        ],
        "skipLibCheck": true,
        /* Bundler mode */
        "moduleResolution": "bundler",
        "allowImportingTsExtensions": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        /* Allow JS (The Key Config) */
        "allowJs": true,
        "checkJs": false,
        /* Paths (Must match vite.config.js) */
        "baseUrl": ".",
        "paths": {
            "components/*": [
                "public/js/components/*"
            ],
            "src/*": [
                "public/js/*"
            ]
        }
    },
    "include": [
        "public/**/*.js",
        "public/**/*.ts"
    ]
}