{
    "hosting": {
        "public": "public",
        "ignore": [
            "firebase.json",
            "**/.*",
            "**/node_modules/**"
        ],
        "rewrites": [
            {
                "source": "**",
                "function": "antigravity"
            }
        ]
    },
    "functions": [
        {
            "source": ".",
            "codebase": "default",
            "ignore": [
                "node_modules",
                ".git",
                "firebase-debug.log",
                "firebase-debug.*.log"
            ]
        }
    ],
    "emulators": {
        "functions": {
            "port": 3004
        },
        "hosting": {
            "port": 3003
        },
        "ui": {
            "enabled": true,
            "port": 4001
        }
    }
}